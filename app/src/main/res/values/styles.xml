<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ef_CustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/ef_colorTextPrimary</item>
        <item name="actionMenuTextColor">@color/ef_colorTextPrimary</item>
    </style>

    <style name="ef_BaseTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ef_AppTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">@color/ef_colorPrimary</item>
        <item name="colorPrimaryDark">@color/ef_colorPrimaryDark</item>
        <item name="colorAccent">@color/ef_colorAccent</item>
    </style>

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">@color/ef_colorAccent</item>
    </style>

    <style name="SampleSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>